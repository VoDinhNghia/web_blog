<!DOCTYPE html>
<html lang="en">

<head>
    <title>home</title>
    <%- include("./header") %>
</head>

<% if (ModeBG  == 'dark'){%>

    <body background="/images/dark-mode.jpg">
        <%}else{%>

            <body>
                <%}%>

                    <%- include("./menu") %>
                        <div class="container" style="margin-top:60px">
                            <div class="row">
                                <%- include("./content_left_personel") %>
                                    <div class="col-sm-8">
                                        <form action="/edit/post/<%= data_post[0].ID%>" method="POST" id="form_new_post_edit" enctype="multipart/form-data">
                                            <h5 class="text-primary text-muted">Privacy</h5>
                                            <select id="privacy" class="custom-select m-b-15" name="privacy">
                                <option selected>
                                <% if(data_post[0].Privacy == 0) {%>
                                     public
                                     <% } else{ %>
                                    private
                                    <% } %>                    
                                </option>
                                <option value="public">public</option>
                                <option value="private">private</option>
                            </select>
                                            <br>
                                            <h5 class="text-primary text-muted">Post Title</h5>
                                            <input type="text" name="title_post" class="form-control m-b-15" value="<%= data_post[0].TitlePost%>" placeholder="" aria-label="" aria-describedby="basic-addon1">
                                            <h5 class="text-primary text-muted">Content</h5>
                                            <textarea class="form-control m-b-15" name="content_post" id="exampleFormControlTextarea1" rows="9"><%= data_post[0].Content%></textarea>
                                            <input class="form-control form-control text-primary" name="image_file" id="formFileSm" type="file" />
                                            <input type="text" name="id_post" value="<%= data_post[0].ID%>" style="display: none;">
                                            <br><br>
                                            <button type="submit" class="btn btn-outline-primary">Edit post</button>
                                            <a href="/delete/post/<%= data_post[0].ID%>" style="color: white;"><button type="button" class="btn btn-outline-danger float-right">Delete</button></a>
                                        </form>
                                    </div>
                            </div>
                        </div>
                        <%- include("./footer") %>
            </body>

</html>