<!DOCTYPE html>
<html lang="en">

<head>
    <title>notify</title>
    <%- include("./header") %>
</head>

<% if (ModeBG  == 'dark'){%>

    <body background="/images/dark-mode.jpg">
        <%}else{%>

            <body>
                <%}%>

                    <%- include("./menu") %>
                        <div class="container" style="margin-top:60px">
                            <div class="row">
                                <%- include("./content_left") %>
                                    <div class="col-sm-8">
                                        <br>
                                        <h5 class="text-center text-primary">Notify detail</h5><br>
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% if(detail_notify.length){ 
                                    for(var i = detail_notify.length-1;i >= 0 ;i--) { %>
                                                    <% if (ModeBG  == 'dark'){%>
                                                        <tr>
                                                            <td class="text-white">
                                                                <%=  %>.</td>
                                                            <td class="text-white">
                                                                <% for(var j = 0; j < info_user.length ;j++) {
                                            if(info_user[j].ID == detail_notify[i].IDuser){ %>
                                                                    <span class="text-white"><%= info_user[j].Name%></span>
                                                                    <%   }
                                        } %><span style="color: red;">
                                                    <% if(detail_notify[i].Type == 0) { %>
                                                        like
                                                        <%} else if(detail_notify[i].Type == 1) { %>
                                                            comments
                                                            <% } else { %>
                                                                share
                                                                <%}%></span> post '
                                                                        <%= detail_notify[i].TitlePost%>' at
                                                                            <%= detail_notify[i].DateAction%>
                                                            </td>

                                                            <td>
                                                                <a href="/detail/notify/<%= detail_notify[i].IDpost%>/<%= detail_notify[i].ID%>" style="color: white;">
                                                                    <button type="button" class="btn btn-outline-primary float-right">Detail</button>
                                                                </a>
                                                            </td>

                                                        </tr>
                                                        <%}else{%>
                                                            <tr>
                                                                <td class="text-dark">
                                                                    <%=  %>.</td>
                                                                <td class="text-dark">
                                                                    <% for(var j = 0; j < info_user.length ;j++) {
                                            if(info_user[j].ID == detail_notify[i].IDuser){ %>
                                                                        <span class="text-dark"><%= info_user[j].Name%></span>
                                                                        <%   }
                                        } %><span style="color: red;">
                                                    <% if(detail_notify[i].Type == 0) { %>
                                                        like
                                                        <%} else if(detail_notify[i].Type == 1) { %>
                                                            comments
                                                            <% } else { %>
                                                                share
                                                                <%}%></span> post '
                                                                            <%= detail_notify[i].TitlePost%>' at
                                                                                <%= detail_notify[i].DateAction%>
                                                                </td>

                                                                <td>
                                                                    <a href="/detail/notify/<%= detail_notify[i].IDpost%>/<%= detail_notify[i].ID%>" style="color: white;">
                                                                        <button type="button" class="btn btn-outline-primary float-right">Detail</button>
                                                                    </a>
                                                                </td>

                                                            </tr>
                                                            <%}%>
                                                                <% }
                                                                        }else{ %>
                                                                    <tr>
                                                                        <td colspan="3">Not found.</td>
                                                                    </tr>
                                                                    <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                            </div>
                        </div>
                        <%- include("./footer") %>
            </body>

</html>