<div class="col-sm-4 text-center">
    <br>
    <% if(data_user.Avatar == '') {
    if(data_user.Gender == 1) {%>
        <div class="fakeimg_avata">
            <img src="/images/male-avatar.png" alt="image" width="230px" height="225px">
        </div>
        <% } else{%>
            <div class="fakeimg_avata">
                <img src="/images/female-avatar.jpg" alt="image" width="230px" height="225px">
            </div>
            <%}}%>
                <% if(avatar.length){ %>
                    <div class="fakeimg_avata">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#choose_avatar">
            <% if(data_user.Avatar != '') { %>
             <img src="<%= data_user.Avatar %>" alt="image" width="230px" height="225px">
            <% }%>
            </button>
                        <!-- Modal -->
                        <div class="modal" id="choose_avatar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title text-info" id="exampleModalLabel">View image</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                       <span aria-hidden="true">&times;</span>
                                    </button>
                                    </div>
                                    <div class="modal-body">
                                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                                            <div class="carousel-inner">
                                                <div class="carousel-item active">
                                                    <img class="d-block w-100" src="<%= data_user.Avatar %>" alt="image" height="400px">
                                                    <br>

                                                </div>
                                                <% if(avatar.length){ 
                                                 for(var j = 0; j < avatar.length;j++) { 
                                                    if(avatar[j].ImageUpdate != data_user.Avatar){ %>
                                                    <div class="carousel-item">
                                                        <img class="d-block w-100" src="<%= avatar[j].ImageUpdate %>" alt="image" height="400px">
                                                        <br>
                                                        <p>
                                                            <button class="btn btn-primary mr-2">
                                                                <a href="/change/avatar/<%= avatar[j].ID %>" class="text-white">Change avatar</a>
                                                            </button>
                                                            <span>
                                                                <button class="btn btn-danger">
                                                                   <a href="/delete/avatar/<%= avatar[j].ID %>" class="text-white">Delete image</a>
                                                               </button>
                                                            </span>
                                                        </p>
                                                    </div>
                                                    <%} } } else{ %>
                                                        <p>Not found image</p>

                                                        <% }; %>
                                            </div>
                                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                                <span class="sr-only">Previous</span>
                                            </a>
                                            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                                <span class="sr-only">Next</span>
                                            </a>
                                        </div>

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>
                        <br>
                        <% if (ModeBG  == 'dark'){%>
                            <ul class="nav nav-pills flex-column text-white">
                                <li class="nav-item"><br>
                                    <p>Name:
                                        <%= data_user.Name %>
                                    </p>
                                </li>
                                <li class="nav-item">
                                    <p>Gender:
                                        <% if(data_user.Gender == 0) {%>
                                            Female
                                            <% }else{ %>
                                                Male
                                                <%}%>

                                    </p>
                                </li>
                                <li class="nav-item">
                                    <p>Email:
                                        <%= data_user.Email %>
                                    </p>
                                </li>
                                <li class="nav-item">
                                    <p>Mobile: 0
                                        <%= data_user.Mobile %>
                                    </p>
                                </li>
                                <li class="nav-item">
                                    <p>Country:
                                        <%= data_user.Country %>
                                    </p>
                                </li>
                            </ul>
                            <%}else{%>
                                <ul class="nav nav-pills flex-column text-dark">
                                    <li class="nav-item"><br>
                                        <p>Name:
                                            <%= data_user.Name %>
                                        </p>
                                    </li>
                                    <li class="nav-item">
                                        <p>Gender:
                                            <% if(data_user.Gender == 0) {%>
                                                Female
                                                <% }else{ %>
                                                    Male
                                                    <%}%>

                                        </p>
                                    </li>
                                    <li class="nav-item">
                                        <p>Email:
                                            <%= data_user.Email %>
                                        </p>
                                    </li>
                                    <li class="nav-item">
                                        <p>Mobile: 0
                                            <%= data_user.Mobile %>
                                        </p>
                                    </li>
                                    <li class="nav-item">
                                        <p>Country:
                                            <%= data_user.Country %>
                                        </p>
                                    </li>
                                </ul>
                                <%}%>
                                    <hr class="d-sm-none">
                                    <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#updateinfo">
                                        Update profile
                                    </button>
                                    <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#changpass">
                                        Change password
                                    </button> <br>
                                    <a href="#">
                                        <button type="button" class="btn btn-outline-primary w-100 mt-3" data-toggle="modal" data-target="#changeBG">
                                            Change background
                                        </button>
                                    </a>

                                    <!-- Modal -->
                                    <div class="modal" id="updateinfo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <form action="/update/profile" method="POST" enctype="multipart/form-data">
                                                    <div class="modal-header">
                                                        <h6 class="modal-title text-info" id="exampleModalLabel">Update information</h6>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                       <span aria-hidden="true">&times;</span>
                                    </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <h6 class="modal-title text-left text-muted">Name</h6>
                                                        <input type="text" name="name" class="form-control mb-2" placeholder="" aria-label="" aria-describedby="basic-addon1">
                                                        <h6 class="modal-title text-left text-muted">Email</h6>
                                                        <input type="email" name="email" class="form-control mb-2" placeholder="" aria-label="" aria-describedby="basic-addon1">
                                                        <h6 class="modal-title text-left text-muted">Mobile</h6>
                                                        <input type="tel" name="mobile" class="form-control mb-2" placeholder="" aria-label="" aria-describedby="basic-addon1">
                                                        <h6 class="modal-title text-left text-muted">Gender</h6>
                                                        <span class="float-left mr-10 md-2">
                                    <input type="checkbox" name="gender" id="male" value="Male">
                                    <label for="male"> Male</label>
                                </span>
                                                        <input type="checkbox" name="gender" id="female" value="Female">
                                                        <label for="female"> Female</label>
                                                        <h6 class="modal-title text-left text-muted">Country</h6>
                                                        <input type="text" name="country" class="form-control mb-2" placeholder="" aria-label="" aria-describedby="basic-addon1">

                                                        <h6 class="modal-title text-left text-muted">File avatar</h6>
                                                        <input type="file" name="image_file_avatar" class="form-control-file" id="exampleFormControlFile1">

                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="submit" class="btn btn-outline-primary">Save change</button>
                                                        <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Close</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Modal -->
                                    <div class="modal" id="changpass" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <form action="/change/password" method="POST">
                                                    <div class="modal-header">
                                                        <h6 class="modal-title text-info" id="exampleModalLabel">Change password</h6>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                       <span aria-hidden="true">&times;</span>
                                    </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <h6 class="modal-title text-left text-muted">Current password</h6>
                                                        <input type="password" name="current_pass" class="form-control" placeholder="" aria-label="" aria-describedby="basic-addon1" required><br>
                                                        <h6 class="modal-title text-left text-muted">New password</h6>
                                                        <input type="password" name="new_pass" class="form-control" placeholder="" aria-label="" aria-describedby="basic-addon1" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one  number and one uppercase and lowercase letter, and at least 8 or more characters"
                                                            required>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="submit" class="btn btn-outline-primary">Save change</button>
                                                        <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Close</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal" id="changeBG" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <form action="/change/background" method="POST">
                                                    <div class="modal-header">
                                                        <h6 class="modal-title text-info" id="exampleModalLabel">Change background</h6>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                       <span aria-hidden="true">&times;</span>
                                    </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <h6 class="modal-title text-left text-muted">Mode</h6><br>
                                                        <span class="float-left mr-10 md-2">
                                                <input type="checkbox" name="mode" id="dark" value="dark">
                                                <label for="dark"> Dark</label>
                                             </span>
                                                        <input type="checkbox" name="mode" id="light" value="light">
                                                        <label for="light"> Light</label>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="submit" class="btn btn-outline-primary">Save change</button>
                                                        <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Close</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <br>
                                    <hr>
</div>