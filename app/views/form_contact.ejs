<!DOCTYPE html>
<html lang="en">

<head>
    <title>contact</title>
    <%- include("./header") %>
</head>

<% if (ModeBG  == 'dark'){%>

    <body background="/images/dark-mode.jpg">
        <%- include("./menu") %>
            <div class="container" style="margin-top:70px">
                <div class="row">
                    <%- include("./content_left") %>
                        <div class="col-sm-8">
                            <br>
                            <h6 class="text-center text-white">Submit suggestions for the application.</h6>
                            <form action="/submit/contact" method="POST" id="form_new_post">
                                <h6 class="text-white">From email address:
                                    <span class="text-white"><%= avatar_home.Email%></span>
                                </h6>
                                <h6 class="text-white">Content: </h6>
                                <textarea class="form-control" name="content" id="exampleFormControlTextarea1" rows="5"></textarea>
                                <br>
                                <button type="submit" class="btn btn-outline-primary">Submit suggest</button>
                            </form>
                        </div>
                </div>
            </div>
            <%}else{%>

                <body>
                    <%- include("./menu") %>
                        <div class="container" style="margin-top:70px">
                            <div class="row">
                                <%- include("./content_left") %>
                                    <div class="col-sm-8">
                                        <br>
                                        <h6 class="text-center text-dark">Submit suggestions for the application.</h6>
                                        <form action="/submit/contact" method="POST" id="form_new_post">
                                            <h6 class="text-dark">From email address:
                                                <span class="text-dark"><%= avatar_home.Email%></span>
                                            </h6>
                                            <h6 class="text-dark">Content: </h6>
                                            <textarea class="form-control" name="content" id="exampleFormControlTextarea1" rows="5"></textarea>
